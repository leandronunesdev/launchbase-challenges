{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Admin</title>
{% endblock %}

{% block content %}

<div class="cards edit-header">
        <h1>Gerenciar chefs</h1>
        <a href="/admin/chefs/create" class="edit">Novo chef</a>
    </div>

<div class="cards cards-admin">   

    {% for chef in chefs %}
    <div class="card-admin" id="">
        <div class="card-img-admin">
            <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
        </div>
        <div class="card-text">
            <h1>{{chef.name}}</h1>            
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
    </div> 
    {% endfor %}   

</div>
   
{% endblock %}