{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
    
<div class="cards">

    {% for item in items %}
    <div class="card" id="">
        <div class="card-img">
            <img src="{{item.image}}" alt="Imagem de {{item.title}}">
        </div>
        <div class="card-text">
            <h1>{{item.title}}</h1>
            <p>{{item.author}}</p>
        </div>
    </div> 
    {% endfor %}   

</div>

{% endblock %}}