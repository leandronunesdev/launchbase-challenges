<input type="url" name="image" value="{{recipe.image}}" placeholder="https://">
<input type="text" name="title" value="{{recipe.title}}" placeholder="Título">
<input type="text" name="author" value="{{recipe.author}}" placeholder="Autor">

<div id="ingredients">
  <h3>Ingredientes</h3>
  {% for ingredient in recipe.ingredients %}
    <div class="ingredient">
    
      <input type="text" name="ingredients[]" value="{{ingredient}}" placeholder="Ingredient" />
    </div>
    
  </div>
  {% endfor %}
<button type="button" class="add-ingredient">Adicionar ingrediente</button>

<div id="steps">
  <h3>Preparação</h3>
  {% for step in recipe.preparation %}
    <div class="step">
    
      <input type="text" name="preparation[]" value="{{step}}" placeholder="Passo" />
    </div>
    
  </div>
  {% endfor %}
<button type="button" class="add-step">Adicionar passo</button>
<input type="text" name="information" value="{{recipe.information}}" placeholder="Informação">

<div>
<button type="submit" class="edit">Salvar</button>
</div>