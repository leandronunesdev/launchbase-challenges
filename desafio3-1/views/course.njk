{% extends "layout.njk" %}

{% block head %}

<title>{{item.title}}</title>

{% endblock %}

{% block content %}



<div class="wrapper">        
    <h1>{{item.title}}</h1>        
</div>

<section class="course">

    <div class="card" id="{{item.id}}">
        <div class="card__image-container">
            <img src="{{item.img_url}}" alt="Logo do Curso {{item.title}}">
        </div>
        <div class="card__content">
            <p>{{item.description}}</p>
        </div>
        <div class="card__info-newgrid">
            <p>{{item.duration}}</p>
            <p class="card__price">{{item.price}}</p>
            <a href="https://rocketseat.com.br/{{item.id}}" class="card__price" target="_blank">Matr√≠cula</a>
        </div>
    </div>


</section>



{% endblock %}
