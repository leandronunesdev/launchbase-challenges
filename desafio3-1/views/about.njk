{% extends "layout.njk" %}

{% block head %}
    <title>Sobre a Rocketseat</title>
{% endblock %}

{% block content %}

<div class="wrapper">
    <img src="{{about.avatar_url}}" alt="Logo da {{about.name}}">
    <h1>{{about.name}}</h1>
    <p>{{about.description}}</p>
    <p>{{about.tech_title}}</p>
    <ul>
        {%for tech in about.techs%}
        <li>{{tech.name}}</li>
        {%endfor%}        
    </ul>
</div>

<div class="footer">
    {%for link in about.links%}
    <a href="{{link.url}}" target="_blank">{{link.name}}</a> 
    {%endfor%}   
</div>

{% endblock %}
    